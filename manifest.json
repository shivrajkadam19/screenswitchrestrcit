{
    "manifest_version": 3,
    "name": "danger",
    "version": "1.0",
    "description": "Restrict browsing to only certain allowed sites",
    "permissions": [
      "tabs",
      "webNavigation",        
      "storage",               
      "activeTab"               
    ],
    "background": {
      "service_worker": "background.js"  
    },
    "host_permissions": [
      "<all_urls>"              
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  